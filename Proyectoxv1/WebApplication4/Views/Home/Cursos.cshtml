@model IEnumerable<curso>
@using WebApplication4.Datos;
@{
    ViewBag.Title = "Academias";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<link href="~/Content/Home/ventas_estilos.css" rel="stylesheet" />

<div class="container">
    <div class="text-center">
        <h3>Paso 3: Elegí el curso que más te guste!</h3>
        <br>
    </div>
    @{
        int contador = 1;
        bool flag = false;
        string rowini = "<div class=\"row p\">";
        string rowfin = "</div>";
        //foreach (var item in Model)
        //{
        //    if (contador ==


        //})
        foreach (var item in Model)
        {
            if (contador == 1)
            {

                @Html.Raw(rowini);
                <div class="col-xs-12 col-sm-4">
                    <div class="card">
                        <a class="img-card" href="#">
                            <img src="https://previews.123rf.com/images/dimasic50/dimasic501601/dimasic50160100104/49918339-Conjunto-de-iconos-vectoriales-e-ilustraciones-en-Flat-estilo-del-dise-o-Profesi-n-Doctor-en-Medicin-Foto-de-archivo.jpg" />
                        </a>
                        <br />
                        <div class="card-content">
                            <h4 class="card-title">
                                <a href="#">
                                    @item.nombre
                                </a>
                            </h4>
                            <p>Precio: $@item.precio</p>
                        </div>
                        <div class="card-read-more_informacion">
                            <a class="btn btn-link btn-block" href="@Url.Action("Informacion","Home")?id=@item.idcurso">
                                Más información
                            </a>
                        </div>
                        <div class="card-read-more_compra">
                            <a class="btn btn-link btn-block" href="#">
                                Comprar ahora!
                            </a>
                        </div>
                    </div>
                </div>
                contador++;
                flag = true;
            }
            else if (contador == 2)
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="card">
                        <a class="img-card" href="#">
                            <img src="https://previews.123rf.com/images/dimasic50/dimasic501601/dimasic50160100104/49918339-Conjunto-de-iconos-vectoriales-e-ilustraciones-en-Flat-estilo-del-dise-o-Profesi-n-Doctor-en-Medicin-Foto-de-archivo.jpg" />
                        </a>
                        <br />
                        <div class="card-content">
                            <h4 class="card-title">
                                <a href="#">
                                    @item.nombre
                                </a>
                            </h4>
                        </div>
                        <div class="card-read-more">
                            <a class="btn btn-link btn-block" href="#">
                                Ver cursos
                            </a>
                        </div>
                    </div>
                </div>
                contador++;
                flag = true;
            }
            else
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="card">
                        <a class="img-card" href="#">
                            <img src="https://previews.123rf.com/images/dimasic50/dimasic501601/dimasic50160100104/49918339-Conjunto-de-iconos-vectoriales-e-ilustraciones-en-Flat-estilo-del-dise-o-Profesi-n-Doctor-en-Medicin-Foto-de-archivo.jpg" />
                        </a>
                        <br />
                        <div class="card-content">
                            <h4 class="card-title">
                                <a href="#">
                                    @item.nombre
                                </a>
                            </h4>
                        </div>
                        <div class="card-read-more">
                            <a class="btn btn-link btn-block" href="#">
                                Ver cursos
                            </a>
                        </div>
                    </div>
                </div>
                @Html.Raw(rowfin);
                contador = 1;
                flag = false;
            }

        }
        if (flag == true)
        {
            @Html.Raw(rowfin);
        }
    }
</div>
<div class="container">
    <br>
    <a href="#ventana1" class="btn btn-primary" data-toggle="modal">Boton 1</a>
    <div class="modal fade" id="ventana1">
        <div class="modal-dialog">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <!-- TITULO DEL MODAL -->
                <div class="modal-header"><h4>Encabezado de la ventana</h4></div>
                <!-- CONTENIDO DEL MODAL -->
                <div class="modal-body">
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quae optio modi labore autem quidem corporis perferendis delectus, aliquid cumque sequi. Perspiciatis repellat aperiam quam sequi facere nobis, facilis culpa dignissimos?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>

                    <button type="button" class="btn btn-info">Comprar</button>
                </div>
            </div>
        </div>
    </div>
</div>
