@model IEnumerable<universidad>
@using WebApplication4.Datos;
@{
    ViewBag.Title = "Universidades";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<link href="~/Content/Home/ventas_estilos.css" rel="stylesheet" />

<div class="container">
    <div class="text-center">
        <h1>Paso 1: Elegí la Universidad</h1>
        <br>
    </div>
    @{
        int contador = 1;
        bool flag = false;
        string rowini = "<div class=\"row p\">";
        string rowfin = "</div>";
        //foreach (var item in Model)
        //{
        //    if (contador ==


        //})
        foreach (var item in Model)
        {
            if (contador == 1)
            {

                @Html.Raw(rowini);
                <div class="col-xs-12 col-sm-4">
                    <div class="card">
                        <a class="img-card" href="@Url.Action("Carreras","Home")?id=@item.id">
                            <img src="@item.logolink" />
                        </a>
                        <br />
                        <div class="card-content">
                            <h4 class="card-title">
                                <a href="@Url.Action("Carreras","Home")?id=@item.id">
                                    @item.nombre
                                </a>
                            </h4>
                        </div>
                        <div class="card-read-more">
                            <a class="btn btn-link btn-block" href="@Url.Action("Carreras","Home")?id=@item.id">
                                Ver cursos
                            </a>
                        </div>
                    </div>
                </div>
                contador++;
                flag = true;
            }
            else if (contador == 2)
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="card">
                        <a class="img-card" href="@Url.Action("Carreras","Home")?id=@item.id">
                            <img src="http://shakespearweb.com/wp-content/uploads/2016/10/Siglo-21-Logo-US21-monocromo.png" />
                        </a>
                        <br />
                        <div class="card-content">
                            <h4 class="card-title">
                                <a href="@Url.Action("Carreras","Home")?id=@item.id">
                                    @item.nombre
                                </a>
                            </h4>
                        </div>
                        <div class="card-read-more">
                            <a class="btn btn-link btn-block" href="@Url.Action("Carreras","Home")?id=@item.id">
                                Ver cursos
                            </a>
                        </div>
                    </div>
                </div>
                contador++;
                flag = true;
            }
            else
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="card">
                        <a class="img-card" href="@Url.Action("Carreras","Home")?id=@item.id">
                            <img src="http://www.ucc.edu.ar/archivos/imagenes/ICDA/logo-ICDA-nvo-web-OK.png" />
                        </a>
                        <br />
                        <div class="card-content">
                            <h4 class="card-title">
                                <a href="@Url.Action("Carreras","Home")?id=@item.id">
                                    @item.nombre
                                </a>
                            </h4>
                        </div>
                        <div class="card-read-more">
                            <a class="btn btn-link btn-block" href="@Url.Action("Carreras","Home")?id=@item.id">
                                Ver cursos
                            </a>
                        </div>
                    </div>
                </div>
                @Html.Raw(rowfin);
                contador = 1;
                flag = false;
            }

        }
        if (flag == true)
        {
            @Html.Raw(rowfin);
        }
    }
    </div>
            

   
    




