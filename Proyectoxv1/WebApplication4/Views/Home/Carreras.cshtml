@model IEnumerable<carrera>
@using WebApplication4.Datos;
@{
    ViewBag.Title = "Academias";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<link href="~/Content/Home/ventas_estilos.css" rel="stylesheet" />

<div class="container">
    <div class="text-center">
        <h1>Paso 2: Elegí la Carrera</h1>
        <br>
    </div>
    @{
        int contador = 1;
        bool flag = false;
        string rowini = "<div class=\"row p\">";
        string rowfin = "</div>";
        //foreach (var item in Model)
        //{
        //    if (contador ==


        //})
        foreach (var item in Model)
        {
            if (contador == 1)
            {

                @Html.Raw(rowini);
                <div class="col-xs-12 col-sm-4">
                    <div class="card">
                        <a class="img-card" href="@Url.Action("Cursos","Home")?idcar=@item.id&&iduniv=@item.iduniversidad">
                            <img src="https://previews.123rf.com/images/dimasic50/dimasic501601/dimasic50160100104/49918339-Conjunto-de-iconos-vectoriales-e-ilustraciones-en-Flat-estilo-del-dise-o-Profesi-n-Doctor-en-Medicin-Foto-de-archivo.jpg" />
                        </a>
                        <br />
                        <div class="card-content">
                            <h4 class="card-title">
                                <a href="@Url.Action("Cursos","Home")?idcar=@item.id&&iduniv=@item.iduniversidad">
                                    @item.nombre
                                </a>
                            </h4>
                        </div>
                        <div class="card-read-more">
                            <a class="btn btn-link btn-block" href="@Url.Action("Cursos","Home")?idcar=@item.id&&iduniv=@item.iduniversidad">
                                Ver cursos
                            </a>
                        </div>
                    </div>
                </div>
                contador++;
                flag = true;
            }
            else if (contador == 2)
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="card">
                        <a class="img-card" href="@Url.Action("Cursos","Home")?idcar=@item.id&&iduniv=@item.iduniversidad">
                            <img src="https://previews.123rf.com/images/dimasic50/dimasic501601/dimasic50160100104/49918339-Conjunto-de-iconos-vectoriales-e-ilustraciones-en-Flat-estilo-del-dise-o-Profesi-n-Doctor-en-Medicin-Foto-de-archivo.jpg" />
                        </a>
                        <br />
                        <div class="card-content">
                            <h4 class="card-title">
                                <a href="@Url.Action("Cursos","Home")?idcar=@item.id&&iduniv=@item.iduniversidad">
                                    @item.nombre
                                </a>
                            </h4>
                        </div>
                        <div class="card-read-more">
                            <a class="btn btn-link btn-block" href="@Url.Action("Cursos","Home")?idcar=@item.id&&iduniv=@item.iduniversidad">
                                Ver cursos
                            </a>
                        </div>
                    </div>
                </div>
                contador++;
                flag = true;
            }
            else
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="card">
                        <a class="img-card" href="@Url.Action("Cursos","Home")?idcar=@item.id&&iduniv=@item.iduniversidad">
                            <img src="https://previews.123rf.com/images/dimasic50/dimasic501601/dimasic50160100104/49918339-Conjunto-de-iconos-vectoriales-e-ilustraciones-en-Flat-estilo-del-dise-o-Profesi-n-Doctor-en-Medicin-Foto-de-archivo.jpg" />
                        </a>
                        <br />
                        <div class="card-content">
                            <h4 class="card-title">
                                <a href="@Url.Action("Cursos","Home")?idcar=@item.id&&iduniv=@item.iduniversidad">
                                    @item.nombre
                                </a>
                            </h4>
                        </div>
                        <div class="card-read-more">
                            <a class="btn btn-link btn-block" href="@Url.Action("Cursos","Home")?idcar=@item.id&&iduniv=@item.iduniversidad">
                                Ver cursos
                            </a>
                        </div>
                    </div>
                </div>
                @Html.Raw(rowfin);
                contador = 1;
                flag = false;
            }

        }
        if (flag == true)
        {
            @Html.Raw(rowfin);
        }
    }
    </div>